{
  "name": "@compare/github",
  "description": "Compare github repositories in terminal.",
  "version": "3.0.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "main": "lib/util.js",
  "types": "lib/util.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "shx rm lib",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint --project tsconfig.json --fix",
    "test": "jest --coverage"
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "chalk": "^4.0.0",
    "cli-table": "^0.3.1",
    "date-fns": "^2.9.0",
    "markdown-table": "^2.0.0",
    "minimist": "^1.2.0",
    "node-fetch": "^2.1.2",
    "ora": "^4.0.1"
  },
  "devDependencies": {
    "@types/bytes": "^3.0.0",
    "@types/cli-table": "^0.3.0",
    "@types/jest": "^26.0.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.0.6",
    "@types/node-fetch": "^2.1.7",
    "coveralls": "^3.0.3",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.3",
    "nock": "^13.0.1",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.0",
    "shx": "^0.3.2",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "bin": {
    "compare-github": "lib/cli.js",
    "gh-compare": "lib/cli.js"
  },
  "bugs": {
    "url": "https://github.com/uetchy/compare-github/issues"
  },
  "files": [
    "lib/cli.js",
    "lib/cli.d.ts",
    "lib/util.js",
    "lib/util.d.ts"
  ],
  "homepage": "https://github.com/uetchy/compare-github",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn test"
    }
  },
  "keywords": [
    "cli",
    "compare",
    "github"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "preferGlobal": true,
  "repository": {
    "url": "https://github.com/uetchy/compare-github.git",
    "type": "git"
  }
}
