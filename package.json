{
  "name": "gh-compare",
  "description": "Compare github repositories in terminal.",
  "version": "2.0.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "main": "lib/cli.js",
  "scripts": {
    "build": "babel -d lib --ignore '*/__tests__/**' --delete-dir-on-start src",
    "format": "prettier --write 'src/**/*.js'",
    "lint": "eslint 'src/**/*.js' --fix",
    "test": "jest"
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "chalk": "^2.4.0",
    "cli-table": "^0.3.1",
    "date-fns": "^1.28.2",
    "markdown-table": "^1.1.2",
    "minimist": "^1.2.0",
    "node-fetch": "^2.1.2",
    "ora": "^3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "eslint": "^5.15.3",
    "eslint-plugin-jest": "^22.4.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nock": "^10.0.6",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "bin": {
    "gh-compare": "cli.js"
  },
  "bugs": {
    "url": "https://github.com/uetchy/gh-compare/issues"
  },
  "files": [
    "cli.js"
  ],
  "homepage": "https://github.com/uetchy/gh-compare",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "keywords": [
    "cli",
    "compare",
    "github"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "preferGlobal": true,
  "repository": {
    "url": "https://github.com/uetchy/gh-compare.git",
    "type": "git"
  }
}
